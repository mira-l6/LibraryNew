                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                </section> *@
                </div>
            </div>

@*             <div class="book-decor">
                <div class="image-container">
                    <img src="~/publicImages/bookRow-removebg-preview.png"/>
                </div>
            </div> *@
        </div>
    </div>

    <script src="/js/views/loginRegsiterView.js" type="module"></script>
    <script>
        document.querySelector('.quote-text').textContent = sessionStorage.getItem('quote');
        document.querySelector('.quote-author').textContent = sessionStorage.getItem('quote-author');
    </script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
