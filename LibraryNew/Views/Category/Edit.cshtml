@model LibraryNew.Models.ViewModel.CategoryVM
@{
}

<h2 class="" mb-3 mt-3">Edit a category</h2>
<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Category.Id" value="@Model.Category.Id"/>
    <div>
        <label asp-for="Category.Genre" class="mb-1"></label>
        <input asp-for="Category.Genre" class="form-control mb-2" />
        <span asp-validation-for="Category.Genre"></span>
    </div>
    <div>
        <label asp-for="Category.Description" class="mb-1"></label>
        <input asp-for="Category.Description" class="form-control mb-2" />
        <span asp-validation-for="Category.Description"></span>
    </div>
    <div>
        <label asp-for="Category.ParentId" class="mb-1"> Parent Caregory</label>
        <select asp-for="Category.ParentId" asp-items="Model.AllCategories" class="form-select">
            <option value=""> None </option>
        </select>
    </div>
    <div asp-validation-summary="All" class="text-danger pt-3"> </div>
    <input type="submit" value="Save" class="btn btn-success w-100 mt-3" />
</form>
