            <button type="button" class="flex-center"><i class="material-icons">eject</i></button>
        </div> *@
    </div>
</div>
<div class="filter-body">
    <section>
        <div class="filter-area pt-4 pb-4 d-flex flex-row justify-content-around">
            <section>
                <div class="filter-box">
                    <div class="filter-option">
                        <a href="">Books_Library</a>
                    </div>
                    <div class="line-break">
                        <div></div>
                    </div>
                    <div class="filter-option">
                        <a href="">Authors_Archive</a>
                    </div>
                    <div class="line-break">
                        <div></div>
                    </div>
                    <div class="filter-option">
                        <a href="">Public_Library</a>
                    </div>
                    <div class="line-break">
                        <div></div>
                    </div>

                    <div class="cb-initial-question filter-option d-flex flex-row">
                        <input type="text" name="cb-initial-input" id="cb-initial-input" placeholder="Ask a question..." />
                        <button type="button" class="cb-renderBtn flex-center"><i class="material-icons">eject</i></button>
                    </div>
                </div>

            </section>
        </div>
    </section>
</div>
<div class="quote-body">
    <q>This will be the quote of the day</q>
    <p>-Author/Person</p>
</div>

